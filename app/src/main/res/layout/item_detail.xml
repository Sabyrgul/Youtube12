<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="4dp"
        android:layout_marginTop="@dimen/page_margin"
        android:id="@+id/cv_detail_image"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/purple_500"
            android:id="@+id/iv_detail_image"
            android:scaleType="centerCrop"
            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        app:layout_constraintStart_toEndOf="@id/cv_detail_image"

        android:layout_marginStart="9dp"
        android:text="@string/signs_of_emotional_distress_or_trauma"
        android:textSize="@dimen/page_margin"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="26dp"
        android:id="@+id/tv_detail_title"
        android:fontFamily="@font/fjallaone_regular"
        android:textColor="@color/primary_color"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        app:layout_constraintStart_toEndOf="@id/cv_detail_image"
        android:layout_marginStart="9dp"
        android:text="4:12"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_title"
        android:layout_marginTop="4dp"
        android:id="@+id/tv_detail_time"
        android:fontFamily="@font/noto_sans_regular"
        android:textColor="@color/primary_color"
        />



</androidx.constraintlayout.widget.ConstraintLayout>